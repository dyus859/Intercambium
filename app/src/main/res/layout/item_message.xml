<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/chat_main_layout_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chat_linear_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:background="@drawable/chat_receive_drawable"
            android:padding="15dp">

            <TextView
                android:id="@+id/chat_message_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAlignment="textStart" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chat_img_receiver"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_main_layout_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chat_linear_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:background="@drawable/chat_send_drawable"
            android:padding="15dp">

            <TextView
                android:id="@+id/chat_message_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAlignment="textStart" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chat_img_sender"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>